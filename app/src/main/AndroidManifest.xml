<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MadProjectAdmin"
        tools:targetApi="31" >

        <activity
            android:name=".ActivityAdminSplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityAdminLoginPage"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityAdminSignUpPage"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityAdminHome"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityAddMenu"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityAllItemMenu"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityDispatchOrder"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityProfile"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityOrderDetails"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityCreateNewUser"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

        <activity
            android:name=".ActivityPendingOrders"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:theme="@style/Theme.MadProjectAdmin">
        </activity>

    </application>

</manifest>